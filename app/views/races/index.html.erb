<table>
	<thead>
		<th>Title</th>
		<th>Description</th>
		<th>Start</th>
		<th>End</th>
		<th>Budget</th>
		<th>Player</th>
		<th>Edit</th>
		<th>Delete</th>
	</thead>
	<% @race.each do |race| %>
	<tr>
		<td><%= race.title %></td>
		<td><%= race.description %></td>
		<td><%= race.start %></td>
		<td><%= race.end %></td>
		<td><%= race.budget %></td>
		<td><%= race.player_id %></td>
		<td><%= link_to 'Edit', edit_race_path(race) %></td>
		<td><%= link_to 'Destroy', race_path(race),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>	
	</tr>
	<%end%>
</table>